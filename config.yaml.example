# Azure DevOps Configuration Template
# Copy this file to config.yaml and fill in your details

azure_devops:
  # Your Azure DevOps organization name (from URL: https://YOUR_ORG.visualstudio.com)
  organization: "your-org-name"
  
  # Your project name
  project: "Your-Project-Name"
  
  # Your Personal Access Token (PAT) - Generate from User Settings > Personal access tokens
  # Ensure it has Work Items (Read) permissions
  access_token: "YOUR_PERSONAL_ACCESS_TOKEN_HERE"
  
  # Default team name (optional - used for team-specific operations)
  default_team: "Your Team Name"
  
  # Default user email (your Azure DevOps email)
  default_user: "your.email@company.com"
  
  # Default iteration path (copy from your Azure DevOps board URL)
  # Format: "ProjectName\\Area\\Iteration Name"
  default_iteration: "ProjectName\\FY25.Q4 (Active)\\Iteration 1"
  
  # Azure DevOps base URL (usually https://your-org.visualstudio.com)
  base_url: "https://your-org.visualstudio.com"

# API Configuration
api:
  title: "Azure DevOps Summarizer"
  version: "1.0.0"
  host: "0.0.0.0"  # Use "127.0.0.1" for localhost only
  port: 8000

# Request timeout settings
timeouts:
  request_timeout: 30  # seconds

# Logging Configuration
logging:
  level: "INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
  format: "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  file: "app.log"  # Log file name
  max_file_size_mb: 10  # Max size before rotation
  backup_count: 3  # Number of backup files to keep

# Instructions:
# 1. Copy this file to config.yaml: cp config.yaml.example config.yaml
# 2. Edit config.yaml with your Azure DevOps details
# 3. Generate a Personal Access Token:
#    - Go to Azure DevOps > User Settings > Personal access tokens
#    - Create new token with Work Items (Read) scope
#    - Copy the token to access_token field
# 4. Find your iteration path:
#    - Go to your Azure DevOps board
#    - Copy the iteration filter from the URL (after %5C decode to \)
# 5. Save the file and run: python main.py